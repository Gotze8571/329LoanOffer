@using PagedList
@using PagedList.Mvc


@model IPagedList<LoanOFFER.Data.BusinessLogic.SimbrellaViewModel>

@{
    //ViewBag.Title = "329 Loan Offer - Home Page";
    Layout = "";

}

<!Doctype html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    @*<link rel="apple-touch-icon" href="https://i.imgur.com/QRAUqs9.png">
        <link rel="shortcut icon" href="https://i.imgur.com/QRAUqs9.png">*@

    <link href="~/Content/assets/css/style.css" rel="stylesheet" />
    <link href="~/Content/vendor/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />

    @*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />*@
    <link rel="stylesheet" href="~/Content/assets/css/style.scss">

    <style>

        .top_bar {
            background: #5c2684;
        }

        .top_bar_container {
            width: 100%;
            height: 86px;
        }

        .logo_container {
            transform: translateY(12px);
        }

        .logo {
            padding-left: 63px;
        }

        .logo_line_1 {
            font-family: 'gill', sans-serif;
            font-size: 30px;
            line-height: 0.75;
            letter-spacing: 0.02em;
            text-transform: uppercase;
            color: #FFFFFF;
            margin-left: 65px;
        }

            .logo_line_1 span {
                color: #fbb800;
                font-weight: bold;
            }

        .logo_line_2 {
            font-size: 11px;
            color: #fff;
            margin-top: -1px;
            padding-left: 66px;
        }

        .logo_img {
            position: absolute;
            left: 16px;
            top: -10px;
            width: 57px;
            height: 38px;
            margin-right: 0;
        }

            .logo_img img {
                max-width: 100%;
            }

        .top_bar_content {
            -webkit-transform: translateY(3px);
            -moz-transform: translateY(3px);
            -ms-transform: translateY(3px);
            -o-transform: translateY(3px);
            transform: translateY(3px);
        }

            .top_bar_content > div {
                display: inline-block;
            }

        .register,
        .login {
            display: inline-block;
            margin-right: 20px;
        }

            .register a,
            .login a {
                font-family: 'gill', sans-serif;
                font-size: 14px;
                color: #fbb880;
                text-transform: uppercase;
                -webkit-transition: all 200ms ease;
                -moz-transition: all 200ms ease;
                -ms-transition: all 200ms ease;
                -o-transition: all 200ms ease;
                transition: all 200ms ease;
            }

                .register a:hover,
                .login a:hover {
                    color: #FFFFFF;
                }

        .cardClass {
            background-color: #5c3092;
            padding: 10px;
            border: 1px solid #ccb27f;
        }

        .cardColor {
            background-color: #5c3092;
        }

        .textClass {
            color: #ccb27f;
        }

        .footer {
            min-width: inherit;
            height: auto;
        }

       
    </style>
</head>
<body>
    <div class="body-content">
        <div class="wrapper">
            @*<div class="container">*@
            <div class="header">
                <!-- Top Bar -->
                <div class="top_bar">
                    @*<div class="container">*@
                    <div class="row">
                        <div class="col">
                            <div class="top_bar_container d-flex flex-row align-items-center justify-content-start">
                                <div class="logo_container">
                                    <div class="logo">
                                        <a class="page-scroll" href="~/Home/Index">
                                            <div class="logo_line_1"><span>CUSTOMER </span>LOAN</div>
                                            <div class="logo_line_2">PORTAL</div>
                                            <div class="logo_img">
                                                @*<img src="~/Content/invest/images/FcmbImage.jpg" />*@
                                                <img src="~/Images/FcmbImage2.jpg" />
                                            </div>
                                        </a>
                                    </div>
                                </div>
                                <div class="top_bar_content ml-auto">
                                    @*<div class="user-area float-left">
                                        <a href="#" class="dropdown-toggle active" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <img class="rounded-circle" src="user-area" alt="">
                                        </a>
                                    </div>*@
                                   
                                    <div class="register_login">
                                        @*@Html.Partial("_LoginPartial")*@
                                        <div class="login">
                                            <a href="~/Login/Index">logout</a>
                                            @*@Html.ActionLink("Home", "Index", "Home")*@
                                        </div>
                                    </div>
                                </div>
                                <div class="burger">
                                    <i class="fa fa-bars" aria-hidden="true"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    @*</div>*@
                </div>
                <!-- Home -->
            </div>

            <div class="body-content">
                <div class="content">
                    <!-- Animated -->
                    <div class="animated fadeIn">
                        <div class="clearfix"></div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="card text-center cardClass">
                                    <div class="card-header textClass">
                                        Simbrella Loan Fast Cash Report.
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title textClass">Simbrella Loan Fast Cash Report Offer.</h5>
                                        <p class="card-text textClass">Click on the View Report, Here to view the Simbrella Loan Fast Cash Offer Screen Log.</p>

                                        <strong>@Html.ActionLink("View Report Here", "Index", "SimbrellaReport")</strong>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card text-center cardClass">
                                    <div class="card-header textClass">
                                        Salary top-up plus Fast Cash Loan Report.
                                    </div>
                                    <div class="card-body textClass">
                                        <h5 class="card-title textClass">Salary top-up plus Fast Cash Loan Offer.</h5>
                                        <p class="card-text textClass">Click on the View Report, Here to view the Salary top-up Fast Cash Loan Offer Screen Log.</p>

                                        <strong>@Html.ActionLink("View Report Here", "Index", "SalaryTopUpReport")</strong>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="card text-center cardClass">
                                    <div class="card-header textClass">
                                        Remitta Fast Cash Loan  Report.
                                    </div>
                                    <div class="card-body textClass">
                                        <h5 class="card-title textClass">Remitta Fast Cash Loan Offer.</h5>
                                        <p class="card-text textClass">Click on the View Report, Here to view the Remitta Fast Cash Loan Offer Screen Log.</p>

                                        <strong>@Html.ActionLink("View Report Here", "Index", "Remitta")</strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            @*<div class="col-md-4">
                                <div class="card text-center cardClass">
                                    <div class="card-header textClass">
                                        USSD Fast Cash Loan Report.
                                    </div>
                                    <div class="card-body">
                                        <h5 class="card-title textClass">USSD Fast Cash Loan Report.</h5>
                                        <p class="card-text textClass">Click on the View Report of USSD Fast Cash Loan.</p>

                                        <strong>@Html.ActionLink("View Report Here", "Index", "FastCash")</strong>
                                    </div>
                                </div>
                            </div>*@
                            @*<div class="col-md-4">
                                <div class="card text-center cardClass">
                                    <div class="card-header textClass">
                                        USSD Fash Cash Disbursed Loan Report.
                                    </div>
                                    <div class="card-body textClass">
                                        <h5 class="card-title textClass">USSD Fash Cash Disbursed Loan Report.</h5>
                                        <p class="card-text textClass">Click on the View Report, Here to view the USSD Fash Cash Disbursed Loan Report Screen Log.</p>

                                        <strong>@Html.ActionLink("View Report Here", "Index", "SalaryTopUpReport")</strong>
                                    </div>
                                </div>
                            </div>*@
                        </div>
                        <div class="footer">
                            <hr />
                            <footer>
                                <strong><p>&copy; @DateTime.Now.Year - FCMB</p></strong>
                            </footer>
                        </div>
                    </div>
                </div>
               
            </div>
        </div>
        
    </div>
</body>


